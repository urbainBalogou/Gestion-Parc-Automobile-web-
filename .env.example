# ===========================================
# Vehicle Reservation Management System
# Environment Configuration
# ===========================================

# Database Configuration
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=vehicle_reservation
DB_HOST=localhost
DB_PORT=5432

# For backend direct connection
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/vehicle_reservation

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Server Configuration
PORT=4000
NODE_ENV=development
API_PORT=4000
FRONTEND_PORT=3000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@togodatalab.tg

# Frontend Configuration
VITE_API_URL=http://localhost:4000/api

# Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Two-Factor Authentication
TWO_FACTOR_APP_NAME=TogoDataLab

# Docker Proxy (optional, for production)
PROXY_PORT=80
PROXY_SSL_PORT=443
